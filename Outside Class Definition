// Defining a method outside a class

#include <iostream>
#include <string>

using namespace std;

class myCar {
    public :
      string brand;
      int modelNumber;
      void itsCondition();
};

void myCar::itsCondition(){
    cout << "Brand New" << endl;
}

int main (){
    myCar myCar1;
    myCar1.brand = "Audi";
    myCar1.modelNumber = 2435;
    myCar1.itsCondition();
    
    return 0;
}
